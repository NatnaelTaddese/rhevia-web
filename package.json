{
  "name": "rhevia-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "types:fetch": "bun --preload dotenv/config scripts/fetch-types.ts",
    "dev": "bun run types:fetch && next dev",
    "dev:docker": "docker compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker compose -f docker-compose.dev.yml down",
    "dev:docker:clean": "docker compose -f docker-compose.dev.yml down -v --rmi local",
    "build": "next build",
    "start": "bun run types:fetch && next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0",
    "@base-ui/react": "^1.1.0",
    "@elysiajs/eden": "^1.4.8",
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.5",
    "@vercel/speed-insights": "^1.3.1",
    "better-auth": "^1.4.18",
    "better-fetch": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.4",
    "motion": "^12.34.3",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "elysia": "^1.4.23",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
